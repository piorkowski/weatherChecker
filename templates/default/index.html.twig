{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="jumbotron">
        <h1>{{ 'intro'|trans({}, 'default') }}</h1>
        <div class="row">
            <div class="col">
                {{ form_start(form) }}
                <div class="form-group mx-sm-3 mb-2">
                    {{ form_widget(form.city) }}
                </div>
                <div class="form-group mx-sm-3 mb-2">
                    {{ form_widget(form.submit) }}
                </div>
                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}